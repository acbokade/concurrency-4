# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Box2D_config = debug
  GLEW_config = debug
  GLFW_config = debug
  IMGUI_config = debug
  HelloWorld_config = debug
  Testbed_config = debug
endif
ifeq ($(config),release)
  Box2D_config = release
  GLEW_config = release
  GLFW_config = release
  IMGUI_config = release
  HelloWorld_config = release
  Testbed_config = release
endif

PROJECTS := Box2D GLEW GLFW IMGUI HelloWorld Testbed

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Box2D:
ifneq (,$(Box2D_config))
	@echo "==== Building Box2D ($(Box2D_config)) ===="
	@${MAKE} --no-print-directory -C . -f Box2D.make config=$(Box2D_config)
endif

GLEW:
ifneq (,$(GLEW_config))
	@echo "==== Building GLEW ($(GLEW_config)) ===="
	@${MAKE} --no-print-directory -C . -f GLEW.make config=$(GLEW_config)
endif

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C . -f GLFW.make config=$(GLFW_config)
endif

IMGUI:
ifneq (,$(IMGUI_config))
	@echo "==== Building IMGUI ($(IMGUI_config)) ===="
	@${MAKE} --no-print-directory -C . -f IMGUI.make config=$(IMGUI_config)
endif

HelloWorld: Box2D
ifneq (,$(HelloWorld_config))
	@echo "==== Building HelloWorld ($(HelloWorld_config)) ===="
	@${MAKE} --no-print-directory -C . -f HelloWorld.make config=$(HelloWorld_config)
endif

Testbed: Box2D GLFW IMGUI GLEW
ifneq (,$(Testbed_config))
	@echo "==== Building Testbed ($(Testbed_config)) ===="
	@${MAKE} --no-print-directory -C . -f Testbed.make config=$(Testbed_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Box2D.make clean
	@${MAKE} --no-print-directory -C . -f GLEW.make clean
	@${MAKE} --no-print-directory -C . -f GLFW.make clean
	@${MAKE} --no-print-directory -C . -f IMGUI.make clean
	@${MAKE} --no-print-directory -C . -f HelloWorld.make clean
	@${MAKE} --no-print-directory -C . -f Testbed.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Box2D"
	@echo "   GLEW"
	@echo "   GLFW"
	@echo "   IMGUI"
	@echo "   HelloWorld"
	@echo "   Testbed"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"